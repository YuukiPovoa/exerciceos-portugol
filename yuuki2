      programa
          {
	   funcao inicio()
	     {
	     inteiro numero1,numero2,numero3, soma
		escreva("Digite o 1 número: ")
		leia(numero1)
		escreva("Digite o 2 número: ")
		leia(numero2)
		escreva("Digite o 3 número: ")
		leia(numero3)
		se(numero1<numero2 e numero1<numero3){
		soma=numero2+numero3
		escreva("OS dois maiores são: ", numero2, "e", numero3, "\n")
		escreva("A soma dos dois maiores valores são:", soma)
		}senao se(numero1>numero2 e numero2>numero3){
		soma=numero1+numero2
		escreva("OS dois maiores são: ", numero1, "e", numero2, "\n")
		escreva("A soma dos dois maiores valores são:", soma)
	     }senao{
		soma=numero1+numero3
		escreva("OS dois maiores são: ", numero1, "e", numero3, "\n")
		escreva("A soma dos dois maiores valores são:", soma)
	   }
	   }
        }
